<Window x:Class="RTFEditor.DialogCreatTable"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RTFEditor"
        mc:Ignorable="d"
        Title="テーブルの挿入" Height="140" Width="235" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
    <Grid>
        <TextBox Name="textColumn" HorizontalAlignment="Left" Height="23" Margin="10,18,0,0" TextWrapping="Wrap" Text="2" VerticalAlignment="Top" Width="73" TextAlignment="Center"/>
        <TextBox Name="textRow"  HorizontalAlignment="Left" Height="23" Margin="131,18,0,0" TextWrapping="Wrap" Text="2" VerticalAlignment="Top" Width="73" TextAlignment="Center" Grid.ColumnSpan="2"/>
        <TextBlock HorizontalAlignment="Left" Margin="101,19,0,0" TextWrapping="Wrap" Text="×" VerticalAlignment="Top"/>
        <Button Name="btnOK" Content="挿入" Height="23" HorizontalAlignment="Left" Margin="21,70,0,0" VerticalAlignment="Top" Width="75"  Click="btnOK_Click"/>
        <Button Name="btnCancel" Content="キャンセル" Height="23" HorizontalAlignment="Left" Margin="118,70,0,0" VerticalAlignment="Top" Width="75"  Click="btnCancel_Click" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
